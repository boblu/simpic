<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd" >
<html>
	<head>
		<title>Simpic</title>
		<meta http-equiv="content-type" content="text/html; charset=UTF-8">
		<%= javascript_include_tag :defaults %>
		<%= stylesheet_link_tag 'top' %>
		<%= ajaxful_rating_style %>
		<%= calendar_date_select_includes "silver" %>
	</head>

	<body>
		<div>
			<div id="header">
 				<div id="logo"><h1><%= @app_name %></h1></div>
				<div class="clear"></div>
			</div>
		</div>

		<div>
			<table id="main">
				<tr>
					<td id="left">
						<div id="password_field" class="banner">
							<% if current_user.blank? %>
								<% form_tag login_admin_users_path, :method => "post" do %>
									<%= password_field_tag :password, nil %>
									<%= submit_tag 'Login' %>
								<% end %>
							<% elsif session[:user_read_level] == 0 %>
								<%= link_to 'Admin', admin_albums_path %>
								&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
								<%= link_to 'Logout', logout_admin_users_path(:id => session[:user_id]) %>
							<% else %>
								Welcome! <%= h(current_user.name) %>
								&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
								<%= link_to 'Logout', logout_admin_users_path(:id => session[:user_id]) %>
							<% end %>
						</div>
						<div id="latest" class="banner">
							<h3>Latest</h3>
							<ul>
								<% @latest.each{|album| %>
									<li><%= link_to album.title, url_for(:controller => :albums, :action => :show, :dirname => album.dirname) %></li>
								<% } %>
							</ul>
						</div>
						<% unless @top_rated[0].rating_average == 0 %>
							<div id="top_rated" class="banner">
								<h3>Top rated</h3>
								<ul>
									<% @top_rated.each{|album|
										break if album.rating_average == 0 %>
										<li><%= link_to album.title, '#' %></li>
									<% } %>
								</ul>
							</div>
						<% end %>
					</td>
					<td id="center">
						<div id="container"><a href="http://www.macromedia.com/go/getflashplayer">Get the Flash Player</a> to see this rotator.</div>
						<script type="text/javascript" src="/effects/JW_image_rotator/swfobject.js"></script>
						<script type="text/javascript">
							var s1 = new SWFObject("/effects/JW_image_rotator/imagerotator.swf","rotator", "400","300","7");
							s1.addParam("allowfullscreen","true");
							s1.addVariable("file", <%= '"' + url_for(:controller => :albums, :action => :top_shown, :only_path => false) + '"' %>);
							s1.addVariable("width","400");
							s1.addVariable("height","300");
							s1.addVariable("screencolor", "0x141414");
							s1.addVariable('repeat', 'true');
							s1.addVariable('shownavigation', 'false');
							s1.addVariable('rotatetime', '4');
							s1.write("container");
						</script>
					</td>
					<td id="right">
						<div id="copyright" class="banner">
							Copyright(c) <%= @copy_year_string %> All Rights Reserved.
						</div>
						<div id="updated" class="banner">
							<h3>Updated</h3>
							<ul>
								<% @updated.each{|album| %>
									<li><%= link_to album.title, '#' %></li>
								<% } %>
							</ul>
						</div>
						<div id="recent_comments" class="banner">
							<h3>Recent comments</h3>
							<ul>
								<li><a href="#">xxxxxxxxxxxxxxxx</a></li>
								<li><a href="#">xxxxxxxxxxxxxxxx</a></li>
								<li><a href="#">xxxxxxxxxxxxxxxx</a></li>
								<li><a href="#">xxxxxxxxxxxxxxxx</a></li>
								<li><a href="#">xxxxxxxxxxxxxxxx</a></li>
							</ul>
						</div>
					</td>
				</tr>
			</table>
			<div id="album_link">
				<ul>
					<% @year_range.each{|year| %>
						<li><%= link_to year, url_for(:controller => :albums, :action => :show, :year => year) %></li>
					<% } %>
				</ul>
			</div>
		</div>
		<div id='footer'>
			Powered by <%= link_to 'SimPic', "http://github.com/boblu/simpic/tree/master" %>
		</div>
	</body>
</html>