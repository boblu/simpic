<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd" >
<html>
	<head>
		<title>Admin</title>
		<meta http-equiv="content-type" content="text/html; charset=UTF-8">
		<%= javascript_include_tag :defaults %>
		<%= stylesheet_link_tag 'admin' %>
		<%= simpic_rating_style %>
		<%= calendar_date_select_includes :silver %>
		<% CalendarDateSelect.default_options.update({:year_range => [1978, 0.years.from_now.year]}) %>
		<%= javascript_include_tag '/javascripts/SWFUpload/swfupload.js' %>
		<%= javascript_include_tag '/javascripts/SWFUpload/swfupload_handlers.js' %>
	</head>
	<body>
		<div id="main">
			<div id="header">
				<%= link_to 'Simpic', admin_root_path, :class => 'logo' %>
				<ul id="top-navigation">
					<li <%= 'class="active"' if params[:controller] == 'admin/albums' %>
						<span><span>
							<%= params[:controller] == 'admin/albums' ? 'Albums' : link_to('Albums', admin_albums_path) %>
						</span></span>
					<li>
					<li <%= 'class="active"' if params[:controller] == 'admin/users' %>
						<span><span>
							<%= params[:controller] == 'admin/users' ? 'Users' : link_to('Users', admin_users_path) %>
						</span></span>
					<li>
					<li <%= 'class="active"' if params[:controller] == 'admin/comments' %>
						<span><span>
							<%= params[:controller] == 'admin/comments' ? 'Comments' : link_to('Comments', admin_comments_path) %>
						</span></span>
					<li>
					<li <%= 'class="active"' if params[:controller] == 'admin/settings' %>
						<span><span>
							<%= params[:controller] == 'admin/settings' ? 'Settings' : link_to('Settings', url_for(:controller => "admin/settings", :action => "edit")) %>
						</span></span>
					<li>
				</ul>
			</div>
			<div id="middle">
				<div id="left-column">
					<%= link_to 'FrontPage', root_path, :class => 'link' %>
					<%= link_to 'Logout', logout_path, :class => 'link' %>
					<%= yield :left_column %>
				</div>
				<div id="center-column">
					<%= yield :layout %>		
				</div>
			</div>
			<div id="footer"></div>
		</div>
	</body>
</html>