<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd" >
<html>
	<head>
		<title>Admin</title>
		<meta http-equiv="content-type" content="text/html; charset=UTF-8">
		<%= javascript_include_tag :defaults %>
		<%= stylesheet_link_tag 'admin' %>
		<%= ajaxful_rating_style %>
		<%= calendar_date_select_includes "silver" %>
		<% CalendarDateSelect.format = :iso_date
		CalendarDateSelect.default_options.update({:year_range => [1978, 0.years.from_now.year], :size => 15}) %>
	</head>
	<body>
		<div id="main">
			<div id="header">
				<a href="index.html" class="logo"><img src="/images/admin/logo.gif" width="101" height="29" alt="" /></a>
				<ul id="top-navigation">
					<li class="active"><span><span>Albums</span></span></li>
					<li><span><span><a href="#">Comments</a></span></span></li>
					<li><span><span><a href="#">Users</a></span></span></li>
				</ul>
			</div>
			<div id="middle">
				<div id="left-column">
					<a href="#" class="link">Frontpage</a>
					<a href="#" class="link">Logout</a>
					<h3><%= link_to 'All albums', admin_albums_url %></h3>
					<% temp = Album.year_range
					unless temp.blank? %>
						<ul class="nav">
							<% temp.each_with_index{|year, index| %>
								<li <%= "class='last'" if temp.size-1 == index %>><%= link_to year, admin_albums_url(:year => year) %></li>
							<% } %>
						</ul>
					<% end %>
				</div>
				<div id="center-column">
					<%= yield :layout %>		
				</div>
			</div>
			<div id="footer"></div>
		</div>
	</body>
</html>