<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd" >
<html>
	<head>
		<title>Simpic</title>
		<meta http-equiv="content-type" content="text/html; charset=UTF-8">
		<%= javascript_include_tag :defaults %>
		<%= stylesheet_link_tag 'simpic' %>
		<%= simpic_rating_style %>
		<link rel="alternate" href=<%= '"' + url_for(:controller => :albums,
													 :action => :cooliris,
													 :album_id => @album.id,
													 :id => (params[:page] || '1'),
													 :only_path => false) + '"' %> type="application/rss+xml"/>
		<% case @album.appearance
		when 0 %>
			<%= javascript_include_tag "/effects/shadowbox-build-3.0b/shadowbox" %>
			<%= stylesheet_link_tag '/effects/shadowbox-build-3.0b/shadowbox' %>
			<script type="text/javascript">
				Shadowbox.init({
					slideshowDelay: 2,
					overlayOpacity: 0.9
				});
			</script>
		<% end %>
	</head>

	<body>
		<div id="bgtop" align="center">
			<div class="wrapper">
				<div id="header">
   				<div id="logo">
						<h1><%= @app_name %></h1>
					</div>
		   		<div id="admin">
		   			<ul>
		   				<% unless current_user.blank? %>
			   				<li><%= link_to 'Logout', logout_admin_users_path(:id => session[:user_id]) %></li>
			   				<% if current_user.read_level == 0 %>
			   					<li><%= link_to 'Admin', admin_albums_path %></li>
			   				<% end %>
			   			<% end %>
		   				<li><%= link_to 'Top', root_path %></li>
		   			</ul>
		   		</div>
				</div>
				<div class="clear"/></div>
			</div>
		</div>
		<div id="bgbottom">
			<div class="wrapper">
				<div id="body_container">
					<div id="left">
						<%= yield :left_column %>
					</div>
					<div id="main">
						<%= yield :layout %>
					</div>
					<div class="clear"/></div>
				</div>
				<div id="footer">
					<div class="bgright">
						<div class="bgleft">
							Powered by <%= link_to 'SimPic', "http://github.com/boblu/simpic/tree/master" %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>
