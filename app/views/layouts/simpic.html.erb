<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd" >
<html>
	<head>
		<title>Simpic</title>
		<meta http-equiv="content-type" content="text/html; charset=UTF-8">
		<%= javascript_include_tag :defaults %>
		<%= stylesheet_link_tag 'simpic' %>
		<%= ajaxful_rating_style %>
		<%= calendar_date_select_includes "silver" %>
	</head>

	<body>
		<div id='header'>
			<div class='title'>Simpic</div>
			<div class='recent'>
				<table>
					<tr>
						<td>
							<div>Latest</div>
							<div>
								<ul>
									<li>xxx</li>
									<li>yyy</li>
								</ul>
							</div>
						</td>
						<td>
							<div>Updated</div>
							<div>
								<ul>
									<li>xxx</li>
									<li>yyy</li>
								</ul>
							</div>
						</td>
						<td>
							<div>Recent comments</div>
							<div>
								<ul>
									<li>xxx</li>
									<li>yyy</li>
								</ul>
							</div>
						</td>
					</tr>
				</table>
			</div>
		</div>
		<div id='main'>
			<div class='left_column'>
				<% session[:user_read_level] = authority_name['guest'] if session[:user_read_level].blank? %>
					<ul class="nav">
						<% Album.year_range(session[:user_read_level]).each{|year| %>
							<li><%= link_to year, albums_url(:year => year) %></li>
						<% } %>
					</ul>
			</div>
			<div class='right_column'>
				<% unless flash[:notice].blank? %>
					<div><b><%= flash[:notice] %></b></div>
				<% end %>
				<%= yield :layout %>
			</div>
		</div>
		<div id='footer'></div>
	</body>
</html>